{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": false,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
    },
    "baseUrl": "./",
    "paths": {
        "@controllers/*": [
            "server/controllers/*"
        ],
        "@middleware/*": [
            "server/middleware/*"
        ],
        "@util/*": [
            "server/util/*"
        ],
        "Utilities/*": [
            "client/util/*"
        ],
        "Components/*": [
            "client/components/*"
        ],
        "Assets/*": [
            "client/assets/*"
        ],
        "@root/*": [
            "*"
        ],
    }
}